@{
    ViewData["PageName"] = "Confirmation";
    ViewData["Title"] = "Thank you for your addition!";
    if (Model.Title == "Independence Day")
    {
        ViewData["Message"] = "Rocky IV is a more American Movie!";
    }
    else
    {
        ViewData["Message"] = "Your addition will be appreciated.";
    }
}

@model MovieCollection.Models.Film

<div class="container col-lg-8">
    <div class="row justify-content-center">
        <h2>Your addition has been processed.</h2>
    </div>
    <div class="row justify-content-center">
        <p>@ViewData["Message"]</p>
    </div>
    <div class="row justify-content-center">
        <p>Click <a asp-action="FilmCollection">here</a> to see the list.</p>
    </div>
</div>